{
  "name": "my-weather-forecast",
  "version": "1.0.0",
  "description": "A Single Page Application (Angular) for displaying the weather forecast",
  "scripts": {
    "ng": "ng",
    "config": "ts-node setenv.ts",
    "start": "node server.js",
    "build": "npm run config -- --environment=prod && ng build --delete-output-path --optimization --aot --resources-output-path --source-map",
    "watch": "npm run config -- --environment=dev && ng serve",
    "watch-server": "nodemon index.js",
    "test": "ng test",
    "heroku-postbuild": "npm run config -- --environment=prod && ng build --delete-output-path --optimization --aot --resources-output-path --source-map",
    "lint": "ng lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katerina-tziala/my-weather-forecast.git"
  },
  "keywords": [
    "Angular12",
    "weather-forecast"
  ],
  "author": "Katerina Tziala",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/katerina-tziala/my-weather-forecast/issues"
  },
  "homepage": "https://github.com/katerina-tziala/my-weather-forecast#readme",
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.4",
    "@angular/cli": "^12.0.5",
    "@angular/common": "~12.0.4",
    "@angular/compiler": "~12.0.4",
    "@angular/compiler-cli": "~12.0.4",
    "@angular/core": "~12.0.4",
    "@angular/forms": "~12.0.4",
    "@angular/platform-browser": "~12.0.4",
    "@angular/platform-browser-dynamic": "~12.0.4",
    "@angular/router": "~12.0.4",
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/typography": "^0.4.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "path": "^0.12.7",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "typescript": "~4.2.3",
    "zone.js": "~0.11.4",
    "yargs": "^16.2.0",
    "ts-node": "^10.0.0",
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.4",
    "@angular-eslint/builder": "12.1.0",
    "@angular-eslint/eslint-plugin": "12.1.0",
    "@angular-eslint/eslint-plugin-template": "12.1.0",
    "@angular-eslint/schematics": "12.1.0",
    "@angular-eslint/template-parser": "12.1.0",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "enhanced-resolve": "^3.3.0",
    "eslint": "^7.26.0",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "nodemon": "^2.0.7",
    "tailwindcss": "^2.2.0"
  },
  "engines": {
    "node": "14.17.1",
    "npm": "7.17.0"
  }
}
